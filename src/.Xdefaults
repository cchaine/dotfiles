! ------------------------------------------------------------------------------
! Font configuration
! ------------------------------------------------------------------------------

URxvt*font:				xft:Ubuntu Mono :regular:size=12
URxvt*boldFont:			xft:Ubuntu Mono :bold:size=12
URxvt*italicFont:		xft:Ubuntu Mono :italic:size=12
URxvt*boldItalicFont:	xft:Ubuntu Mono :bold italic:size=12

! ------------------------------------------------------------------------------
! Xft Font Configuration
! ------------------------------------------------------------------------------

Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

Xft.dpi: 146

! ------------------------------------------------------------------------------
! URxvt configs
! ------------------------------------------------------------------------------

! font spacing
URxvt*letterSpace:		0.5
URxvt.lineSpace:		0

! general settings
URxvt*saveline:			15000
URxvt*termName:			rxvt-256color
URxvt*iso14755:			false
URxvt*urgentOnBell:		true

! appearance
URxvt*scrollBar:		false
URxvt*scrollBar_right:	false
URxvt*internalBorder:	35
URxvt*externalBorder:	0
URxvt*geometry:			84x22

! perl extensions
URxvt*perl-ext-common:	default,clipboard,url-select,keyboard-select

URxvt*urlLauncher:		firefox
URxvt*underlineURLs:	true

