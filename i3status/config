general {
  output_format = "i3bar"
  colors = false
  markup = pango
  interval = 5
}

order += "disk /"
order += "ethernet enp0s25"
order += "tztime local"

disk "/" {
  format = " <span weight='bold'>Disk</span>: %free Free "
}

ethernet enp0s25 {
  format_up = " <span weight='bold'>enp0s25</span>: %ip "
  format_down = " <span weight='bold'>enp0s25</span>: disconnected "
}

tztime local {
  format = " %time "
  format_time = "%a %-d %b %H:%M "
}
